<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新建联系人"
            android:textSize="@dimen/sp24" />
    </androidx.appcompat.widget.Toolbar>


    <TextView
        android:id="@+id/tv_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/useradd_info"
        android:textSize="18dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_wechatId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="微信名称"
            android:textSize="@dimen/sp24" />

        <EditText
            android:id="@+id/tv_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/btn_image"
            android:layout_toLeftOf="@+id/btn_image"
            android:layout_toEndOf="@id/tv_wechatId"
            android:layout_toRightOf="@id/tv_wechatId"
            android:lines="1"
            android:singleLine="true"
            android:textSize="@dimen/sp24" />

        <ImageButton
            android:id="@+id/btn_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/photo" />

    </RelativeLayout>

    <Switch
        android:id="@+id/sw_voice_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="默认语音通话,打开视频通话"
        android:textSize="20dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="功能测试" />

        <Button
            android:id="@+id/btn_passed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置完成" />


    </LinearLayout>


</LinearLayout>